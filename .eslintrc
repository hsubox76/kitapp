{
  "extends": "airbnb",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": ['.js', '.android.js', '.ios.js']
      }
    }
  },
  "rules": {
    "strict": 0,
    "indent": ["error", 2, {SwitchCase: 1}],
    "react/jsx-indent": [2, 2],
    "react/jsx-indent-props": [2, 2],
    "comma-dangle": 0,
    "no-use-before-define": 0,
    "new-cap": 0,
    "no-underscore-dangle": 0,
    "no-console": 0,
    "no-case-declarations": 0
  }
}